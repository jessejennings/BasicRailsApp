 <h1><%= @topic.name %></h1>
 <% if policy(@topic).update? %>
  <%=link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
 <% end %>
  <% if policy(@topic).destroy? %>
   <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
   <% end %>
   <% if policy(Post.new).create? %>
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
   <div class="row">
    <div class="col-md-8">
      <p class="lead">
        <%= @topic.description %>
      </p>
      <%= render @posts %>
      <%= will_paginate @posts %>
    </div>
   </div>
<div class="row">
  <div class="col-md-6">
  <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
  <h1><%= markdown @post.title %></h1> 
  <small>
  <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
  submitted <%= time_ago_in_words(@post.created_at) %> ago by
  <%= @post.user.name %>
  </small>
  <div class="img-responsive"><%= image_tag(@post.image.url) if @post.image? %> </div>
  <p><%= markdown @post.body.to_s %></p>
  </div>
  <div class="col-md-6" style="margin-top:10px">
  <% if policy(@post).edit? %>
  <%= link_to "Edit post", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
  <% end %>
  <% if policy(@post).destroy? %>
  <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this post?"} %>
  <% end %>
  <div>
  <h3><%= pluralize(@post.points, 'point') %></h3>
  <small>
  <%= pluralize(@post.up_votes, 'up vote') %>, 
  <%= pluralize(@post.down_votes, 'down vote') %>
  </small>
  </div>
  <%= render partial: "favorites/favorite", locals: {topic: @topic, post: @post } %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
  <h2>Comments</h2>
  <div class="js-comments">
  <%= render partial: '/comments/comment', collection: @comments %>
  </div>
  </div>
  <div class="col-md-6">
  <h2>Have something to say?</h2>
  <%= render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @comment } %>
  </div>
</div>
   