<%= form_for [topic, post, post.comments.new ] do |f| %>
    <% if comment.errors.any? %>
        <div class="alert alert-danger">
            <h4>There are <%= pluralize(comments.errors.count, "errors") %>.</h4>
            <ul>
                <% comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= form_group_tag(comment.errors[:body]) do %>
        <%= f.label :comment %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: 'Enter comment' %>
    <% end %>
    <div class='form-group'>
        <%= f.submit 'Add Comment', class: 'btn btn-success'%>
    </div>
<% end %>